services:
  zeek:
    image: zeek/zeek:{{ zeek_version }}
    container_name: zeek
    network_mode: host
    cap_add:
      - NET_ADMIN
      - NET_RAW
    volumes:
      - {{ base_directory }}/zeek:/opt/zeek
      - {{ zeek_log_path }}:/opt/zeek/logs
      - {{ base_directory }}/zeek/packages:/usr/local/zeek/share/zeek/site/packages
    command: ["/opt/zeek/zeek-entrypoint.sh"]
    restart: unless-stopped
