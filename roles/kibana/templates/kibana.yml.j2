# Kibana 9.0 Configuration

# Server
server.name: {{ server_hostname }}
server.host: "0.0.0.0"
server.port: {{ kibana_port }}

# Kibana HTTPS
server.ssl.enabled: true
server.ssl.certificate: /usr/share/kibana/config/certs/kibana.crt
server.ssl.key: /usr/share/kibana/config/certs/kibana-key.pem

# Elasticsearch connection
elasticsearch.hosts: ["https://localhost:{{ elasticsearch_http_port }}"]
elasticsearch.username: "kibana_system"
elasticsearch.password: "{{ elasticsearch_password }}"
elasticsearch.ssl.certificateAuthorities: ["/usr/share/kibana/config/certs/ca.crt"]
elasticsearch.ssl.verificationMode: certificate

# Monitoring
monitoring.ui.enabled: true
monitoring.kibana.collection.enabled: true

# Encryption keys (required)
xpack.encryptedSavedObjects.encryptionKey: "min32characterslongencryptionkey123456"
xpack.security.encryptionKey: "min32characterslongencryptionkey123456"
xpack.reporting.encryptionKey: "min32characterslongencryptionkey123456"

# Telemetry
telemetry.enabled: false
telemetry.optIn: false
